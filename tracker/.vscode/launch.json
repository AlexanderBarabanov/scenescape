{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tracker: Debug container",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/tracker",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:2345",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": false,
            "preLaunchTask": "Prepare Container Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/scenescape/tracker": "${workspaceFolder}"
            }
        },
        {
            "name": "Tracker: Debug native",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/tracker",
            "args": [
                "--config", "${workspaceFolder}/config/tracker.json",
                "--schema", "${workspaceFolder}/schema/config.schema.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/build-debug/debug.env",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "Prepare Native Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
